{
  "name": "@tronin/stringinject",
  "version": "2.2.1",
  "description": "Inject an array of items in to a string replacing selected values.",
  "type": "module",
  "exports": "./dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.test.json",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build && npm run build:test",
    "test": "mocha dist-test/**/*.spec.js",
    "test:watch": "npm run build && npm run build:test && mocha --watch dist-test/**/*.spec.js",
    "test:integration": "npm run build && node integration-tests/run-all.js",
    "test:all": "npm test && npm run test:integration"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ts-ign0re/stringinject.git"
  },
  "author": "Tom Cafferkey, Tronin Denis",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ts-ign0re/stringinject/issues"
  },
  "keywords": [
    "string",
    "replace",
    "inject"
  ],
  "homepage": "https://github.com/ts-ign0re/stringinject#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.0.0",
    "chai": "^4.0.2",
    "mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.4.0"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  }
}
